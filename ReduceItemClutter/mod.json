{
  "name": "调整掉落 Reduce Item Clutter",
  "description": "Replaces items with NoDrop",
  "author": "Finkster",
  "website": "https://www.nexusmods.com/diablo2resurrected/mods/421",
  "version": "1.2",
  "config": [
    {
      "id": "strictness",
      "name": "Strictness Level",
      "description": "Refer to the README for detailed information",
      "type": "select",
      "defaultValue": "low",
      "options": [
          { "description": "", "label": "Off", "value": "off" },
          { "description": "", "label": "Low", "value": "low" },
          { "description": "", "label": "Medium", "value": "med" },
          { "description": "", "label": "High", "value": "high" },
          { "description": "", "label": "Ultra", "value": "ult" }
      ]
    },
    {
      "id": "gems",
      "type": "section",
      "name": "Gems",
      "defaultExpanded": false
    },
    {
      "id": "chip",
      "type": "checkbox",
      "name": "Remove Chipped Gems",
      "description": "不掉落碎裂宝石",
      "defaultValue": false
    },
    {
      "id": "flaw",
      "type": "checkbox",
      "name": "Remove Flawed Gems",
      "description": "不掉落瑕疵宝石",

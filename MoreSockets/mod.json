{
  "name": "更多孔 More Sockets (extra sockets in all gear)",
  "description": "More sockets enabled in all gear pieces, unleash your crafting potential ;)",
  "author": "Shadedness",
  "website": "https://www.nexusmods.com/diablo2resurrected/mods/356",
  "version": "1.0.1",
  "config": [
    {
      "id": "gearRank",
      "type": "select",
      "name": "增加孔数的挡位",
      "description": "设置收孔数影响的装备等级（6个以内）: 普通，卓越（噩梦lvl 25+），精英（地狱/lvl 40+） 孔数仍限制在占用空间内。",
      "defaultValue": "normal",
      "options": [
        { "value": "normal", "label": "普通及以上" },
        { "value": "exceptional", "label": "卓越及以上" },
        { "value": "elite", "label": "精英" }
      ]
    },
    {
      "id": "socketThrowing",
      "type": "checkbox",
      "name": "是否开启投掷武器的空位？",
      "description": "",
      "defaultValue": true
    },
    {
      "id": "fourSocketHelms",
      "type": "checkbox",
      "name": "是否提升头盔（helms）孔数上限到4",
      "description": "【不建议】头盔符文之语通常只占 2~3 孔。",
      "defaultValue": false
    },
    {
      "id": "socketGloves",
      "type": "checkbox",
      "name": "是否启用手套（Gloves）孔位",
      "description": "",
      "defaultValue": true
    },
    {
      "id": "glovesBehavior",
      "type": "select",
      "name": "手套孔位归为...",
      "description": "定义宝石和符文在手套上的效果",
      "defaultValue": "0",
      "options": [
        { "value": "0", "label": "武器" },
        { "value": "1", "label": "甲胄或头盔" },
        { "value": "2", "label": "盾" }
      ]
    },
    {
      "id": "glovesSockets",
      "type": "select",
      "name": "手套的孔数?",
      "description": "选择手套孔数。挡位变化：普通2孔；卓越/噩梦3孔；精英/地狱4孔",
      "defaultValue": "4",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "4", "label": "4" },
        { "value": "gearLevel", "label": "随挡位变化" }
      ]
    },
    {
      "id": "socketBoots",
      "type": "checkbox",
      "name": "是否启用鞋的孔位",
      "description": "",
      "defaultValue": true
    },
    {
      "id": "bootsBehavior",
      "type": "select",
      "name": "鞋的孔位类似...",
      "description": "定义宝石和符文在手套上的效果",
      "defaultValue": "1",
      "options": [
        { "value": "0", "label": "武器" },
        { "value": "1", "label": "甲胄或头盔" },
        { "value": "2", "label": "盾" }
      ]
    },
    {
      "id": "bootsSockets",
      "type": "select",
      "name": "鞋的孔数？",
      "description": "挡位变化：普通2孔；卓越/噩梦3孔；精英/地狱4孔",
      "defaultValue": "4",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "4", "label": "4" },
        { "value": "gearLevel", "label": "随挡位变化" }
      ]
    },
    {
      "id": "socketBelts",
      "type": "checkbox",
      "name": "是否启用腰带孔位",
      "description": "",
      "defaultValue": true
    },
    {
      "id": "beltsBehavior",
      "type": "select",
      "name": "腰带的孔位类似...",
      "description": "",
      "defaultValue": "1",
      "options": [
        { "value": "0", "label": "武器" },
        { "value": "1", "label": "甲胄或头盔" },
        { "value": "2", "label": "盾" }
      ]
    },
    {
      "id": "beltsSockets",
      "type": "select",
      "name": "腰带的孔数？",
      "description": "挡位变化：普通1孔；卓越/噩梦以上2孔",
      "defaultValue": "2",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" },
        { "value": "gearLevel", "label": "随挡位变化" }
      ]
    },
    {
      "id": "socketJewelry",
      "type": "checkbox",
      "name": "是否启用饰品（指环、项链）孔位",
      "description": "",
      "defaultValue": true
    },
    {
      "id": "jewelryBehavior",
      "type": "select",
      "name": "饰品孔位类似...",
      "description": "",
      "defaultValue": "2",
      "options": [
        { "value": "0", "label": "武器" },
        { "value": "1", "label": "甲胄或头盔" },
        { "value": "2", "label": "盾" }
      ]
    }
  ]
}
